{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "dist",
    "sourceMap": true,
    "lib": [ "es6", "dom" ]
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}